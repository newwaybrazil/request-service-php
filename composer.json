{
    "name": "newwaybrazil/request-service-php",
    "description": "PHP library using Guzzle base to send request to any services",
    "version": "1.0.0",
    "type": "library",
    "license": "GPL-3.0-only",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "squizlabs/php_codesniffer": "3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "~1.2.0"
    },
    "authors": [
        {
            "name": "New Way Brazil",
            "email": "opensource@gruponewway.com.br"
        }
    ],
    "autoload": {
        "psr-4": {
            "RequestService\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "check": [
            "@lint",
            "@cs",
            "@test"
        ],
        "lint": [
            "find ./src -name '*.php' -print0 | xargs -0 -n1 -P8 php -l -d display_errors=0"
        ],
        "cs": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit",
        "test-xml": "vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage/coverage.xml --log-junit junit.xml",
        "sonar": "bash contrib/sonar.sh"
    }
}
